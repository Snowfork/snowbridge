[Unit]
Description=Polkadot Node

[Service]
User=polkadot
Group=polkadot
ExecStart=/usr/local/bin/polkadot \
         --name {{ project|default('project') }}-{{ instance_count }} \
         --chain={{ chain }} \
         --database paritydb \
         --pruning archive \
         --rpc-external \
         --rpc-cors=all \
         --ws-external \
         {% if loggingFilter is defined and loggingFilter|length %}
         -l{{ loggingFilter }} \
         {% endif %}
         {% if relay_ip_address is defined and relay_ip_address|length %}
         --reserved-nodes /ip4/{{ relay_ip_address }}/tcp/30333/p2p/{{ relay_p2p_address }} \
         {% endif %}
         {% if default_telemetry_enabled %}
         --telemetry-url 'wss://telemetry.polkadot.io/submit/ 0' \
         {% endif %}
         {% if telemetryUrl is defined and telemetryUrl|length %}
         --telemetry-url '{{ telemetryUrl }} 1'
         {% endif %}
         {% if not telemetryUrl|length and not default_telemetry_enabled %}
         --no-telemetry
         {% endif %}

Restart=always

[Install]
WantedBy=multi-user.target
