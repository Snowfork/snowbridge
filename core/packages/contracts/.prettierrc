{
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 100,
          "tabWidth": 4,
          "singleQuote": false,
          "bracketSpacing": true,
          "explicitTypes": "always",
          "plugins": ["prettier-plugin-solidity"]
        }
      },
      {
        "files": "*.ts",
        "options": {
          "semi": false,
          "printWidth": 100,
          "tabWidth": 4,
          "singleQuote": false
        }
      }
    ]
  }
